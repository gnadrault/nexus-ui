{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/example.js"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
